form.main.form.page
	div(class="form-group")
		label.control-label(for="name") Name
		.controls
			input.form-control#url(name="name", type="text", value="#{name}")
			span.help-block 

	div(class="form-group")
		label.control-label(for="category") Category
		.controls
			input.form-control#title(name="category", type="text", value="#{category}", placeholder="What type of noms is it?")
			span.help-block 
	div(class="form-group")
		label.control-label(for="address") Address
		.controls
			input.form-control#title(name="address", type="text", value="#{location}", placeholder="Enter the address!")
			p optional
			span.help-block 
	div(class="form-group")
		label.control-label(for="website") Website
		.controls
			input.form-control#title(name="title", type="text", value="#{location}", placeholder="Does this Eatsery have a website?")
			span.help-block 
	div(class="form-group") 
		label.control-label(for="image") Image
		+upload_bootstrap fileTypes='.jpg' multiple=false formData=eatseryData
	input.btn.btn-primary(type="submit", value="Save")
